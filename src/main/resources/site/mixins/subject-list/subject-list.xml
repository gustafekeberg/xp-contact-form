<?xml version="1.0" encoding="UTF-8"?>
<mixin>
	<display-name>List of predefined subjects</display-name>
	<items>
		<item-set name="subjectList">
			<label>Subject list</label>
			<occurrences minimum="0" maximum="1" />
			<config />
			<items>
				<input type="TextLine" name="subjectLabel">
					<label>Subject label</label>
					<occurrences minimum="0" maximum="1"/>
				</input>
				<item-set name="subjects">
					<label>Subject option</label>
					<occurrences minimum="0" maximum="0" />
					<config />
					<items>
						<input type="TextLine" name="title">
							<label>Title</label>
							<occurrences minimum="1" maximum="1" />
						</input>
						<input type="CheckBox" name="default">
							<label>Default/pre-selected option?</label>
							<occurrences minimum="0" maximum="1"/>
						</input>
						<input type="TextLine" name="subject">
							<label>Subject</label>
							<occurrences minimum="1" maximum="1" />
						</input>
						<input type="TextLine" name="receiver">
							<label>Receiver</label>
							<occurrences minimum="1" maximum="0" />
						</input>
					</items>
				</item-set>
			</items>
		</item-set>
	</items>
</mixin>
