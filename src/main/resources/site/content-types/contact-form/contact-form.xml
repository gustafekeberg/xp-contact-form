<?xml version="1.0" encoding="UTF-8"?>
<content-type>
	<display-name>Contact form</display-name>
	<super-type>base:structured</super-type>
	<allow-child-content>true</allow-child-content>
	<form>
		<field-set name="Config">
			<label>Config</label>
			<items>
				<input type="TextLine" name="id">
					<label>Form ID</label>
					<occurrences minimum="0" maximum="1"/>
					<config>
						<regexp>[A-Za-z-_]*</regexp>
					</config>
				</input>
				<input type="CheckBox" name="show_required_markers">
					<label>Show 'required field' markers?</label>
					<occurrences minimum="0" maximum="1" />
				</input>
				<input type="HtmlArea" name="required_field_helper_text">
					<label>Helper text for 'required field'</label>
					<occurrences minimum="0" maximum="1" />
				</input>
				<field-set name="Display">
					<label>Display in editor?</label>
					<items>
						<input type="CheckBox" name="show_editor">
							<label>Display form editor?</label>
							<occurrences minimum="0" maximum="1" />
						</input>
						<input type="CheckBox" name="show_preview">
							<label>Display form preview?</label>
							<occurrences minimum="0" maximum="1" />
						</input>
						<input type="CheckBox" name="show_help">
							<label>Display form editor help?</label>
							<occurrences minimum="0" maximum="1" />
						</input>
					</items>
				</field-set>
			</items>
		</field-set>
		<field-set name="Responses">
			<label>Responses</label>
			<items>
				<inline mixin="responses"/>
			</items>
		</field-set>
		<inline mixin="custom-css"/>
	</form>
</content-type>
