<?xml version="1.0" encoding="UTF-8"?>
<part>
	<display-name>Contact Form: Display form</display-name>
	<config>
		<field-set name="Config">
			<label>Config</label>
			<items>

				<item-set name="title">
					<label>Title</label>
					<occurrences minimum="0" maximum="1" />
					<items>
						<input type="CheckBox" name="display">
							<label>Display title</label>
							<occurrences minimum="0" maximum="1"/>
						</input>
						<input type="TextLine" name="text">
							<label>Custom title (optional)</label>
							<occurrences minimum="0" maximum="1"/>
						</input>
						<input type="RadioButton" name="heading_level">
							<label>Heading level</label>
							<occurrences minimum="0" maximum="1"/>
							<config>
								<option value="1">H1</option>
								<option value="2">H2</option>
								<option value="3">H3</option>
								<option value="4">H4</option>
								<option value="5">H5</option>
								<option value="6">H6</option>
							</config>
						</input>
					</items>
				</item-set>
				<input type="ContentSelector" name="selectedForm">
					<label>Select form</label>
					<occurrences minimum="1" maximum="1"/>
					<config>
						<allowType>form</allowType>
					</config>
				</input>
			</items>
		</field-set>
	</config>
</part>
