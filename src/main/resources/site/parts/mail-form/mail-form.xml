<?xml version="1.0" encoding="UTF-8"?>
<part>
	<display-name>Mail form</display-name>
	<config>
		<field-set name="Appearence">
			<label>Appearence</label>
			<items>
				<input type="TextLine" name="title">
					<label>Title</label>
					<occurrences minimum="0" maximum="1"/>
					<config/>
				</input>
			</items>
		</field-set>
		<field-set name="Config">
			<label>Config</label>
			<items>
				<input type="CheckBox" name="showDoc">
					<label>Show help in edit mode?</label>
					<occurrences minimum="0" maximum="1" />
					<config/>
				</input>
				<input type="TextLine" name="receiver">
					<label>Send form data to (email)</label>
					<occurrences minimum="0" maximum="0"/>
					<config>
						<!-- <regexp>\w+([-+.']\w+)*@\w+([-.]\w+)*\.[A-Z0-9]{2,6}([-.][A-Z0-9]{2,6})*</regexp> -->
					</config>
				</input>
				<input type="CheckBox" name="copyToSender">
					<label>Send a note to sender</label>
					<occurrences minimum="0" maximum="1"/>
					<config/>
				</input>
				<field-set name="defaultFields">
					<label>Default fields</label>
					<items>
						<input type="TextLine" name="subjectLabel">
							<label>Subject label</label>
							<occurrences minimum="0" maximum="1"/>
						</input>
						<item-set name="subjects">
							<label>Subject</label>
							<occurrences minimum="0" maximum="0" />
							<config />
							<items>
								<input type="TextLine" name="header">
									<label>Header</label>
									<occurrences minimum="1" maximum="1" />
								</input>
								<item-set name="option">
									<label>Option</label>
									<occurrences minimum="1" maximum="0" />
									<config />
									<items>
										<input type="TextLine" name="title">
											<label>Title</label>
											<occurrences minimum="1" maximum="1" />
										</input>
										<input type="TextLine" name="subject">
											<label>Subject</label>
											<occurrences minimum="1" maximum="1" />
										</input>
										<input type="TextLine" name="receiver">
											<label>Receiver</label>
											<occurrences minimum="1" maximum="0" />
										</input>
									</items>
								</item-set>
							</items>
						</item-set>
					</items>
				</field-set>
			</items>
		</field-set>
		<field-set name="customFields">
			<label>Custom fields</label>
			<items>
				<item-set name="customField">
					<label>Input field</label>
					<occurrences minimum="0" maximum="0" />
					<config />
					<items>
						<input type="TextLine" name="name">
							<label>Name</label>
							<occurrences minimum="1" maximum="1" />
						</input>
						<input type="TextLine" name="placeholder">
							<label>Placeholder</label>
							<occurrences minimum="1" maximum="1" />
						</input>
						<input type="ComboBox" name="type">
							<label>Type</label>
							<occurrences minimum="1" maximum="1" />
							<config>
								<option value="phone">Phone number</option>
								<option value="url">URL</option>
								<option value="text">Text</option>
								<option value="date">Date</option>
							</config>
						</input>
					</items>
				</item-set>
			</items>
		</field-set>
		<field-set name="Responses">
			<label>Responses</label>
			<items>
				<input type="RadioButton" name="subject">
					<label>Subject-line</label>
					<occurrences minimum="0" maximum="0"/>
					<config>
						<option value="custom">Custom field named 'subject'</option>
						<option value="generated">Selected subject</option>
					</config>
				</input>
				<input type="TextLine" name="prefix">
					<label>Subject prefix</label>
					<occurrences minimum="0" maximum="1" />
				</input>
				<input type="TextLine" name="suffix">
					<label>Subject suffix</label>
					<occurrences minimum="0" maximum="1" />
				</input>
				<item-set name="template">
					<label>Response templates</label>
					<occurrences minimum="1" maximum="1" />
					<config />
					<items>
						<input type="TextArea" name="receiver">
							<label>Receiver</label>
							<occurrences minimum="0" maximum="1" />
						</input>
						<input type="TextArea" name="sender">
							<label>Sender</label>
							<occurrences minimum="0" maximum="1" />
						</input>
					</items>
				</item-set>
			</items>
		</field-set>
	</config>
</part>
