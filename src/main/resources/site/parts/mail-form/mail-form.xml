<?xml version="1.0" encoding="UTF-8"?>
<part>
	<display-name>Mail form</display-name>
	<config>
		<field-set name="Config">
			<label>Config</label>
			<items>
				<input type="TextLine" name="formId">
					<label>Form ID</label>
					<occurrences minimum="1" maximum="1"/>
					<config>
						<regexp>[A-Za-z-_]*</regexp>
					</config>
				</input>
				<input type="TextLine" name="title">
					<label>Title</label>
					<occurrences minimum="0" maximum="1"/>
					<config/>
				</input>
				<input type="CheckBox" name="requiredNote">
					<label>Show 'required field' note?</label>
					<occurrences minimum="0" maximum="1" />
					<config/>
				</input>
				<input type="CheckBox" name="showDoc">
					<label>Show documentation in edit mode?</label>
					<occurrences minimum="0" maximum="1" />
					<config/>
				</input>
				<field-set name="Appearence">
					<label>Appearence</label>
					<items>
						<input type="RadioButton" name="layout">
							<label>Layout</label>
							<occurrences minimum="0" maximum="0"/>
							<config>
								<option value="2">Two columns (default)</option>
								<option value="3">Three columns</option>
							</config>
						</input>
					</items>
				</field-set>
			</items>
		</field-set>
		<field-set name="fields">
			<label>Input</label>
			<items>
				<item-set name="inputField">
					<label>Field</label>
					<occurrences minimum="0" maximum="0" />
					<config />
					<items>
						<input type="TextLine" name="name">
							<label>Field identifier</label>
							<occurrences minimum="1" maximum="1" />
							<config>
								<regexp>^\w*$</regexp>
							</config>
						</input>
						<input type="TextLine" name="label">
							<label>Label</label>
							<occurrences minimum="0" maximum="1" />
							<config/>
						</input>
						<input type="TextLine" name="placeholder">
							<label>Placeholder</label>
							<occurrences minimum="0" maximum="1" />
						</input>
						<input type="ComboBox" name="type">
							<label>Type</label>
							<occurrences minimum="1" maximum="1" />
							<config>
								<option value="date">Date</option>
								<option value="datetime-local">Date and time, no time zone</option>
								<option value="email">E-mail address</option>
								<option value="month">Month</option>
								<option value="number">Number</option>
								<option value="tel">Phone number</option>
								<option value="text">Text</option>
								<option value="textArea">TextArea</option>
								<option value="time">Time</option>
								<option value="url">url</option>
							</config>
						</input>
						<input type="RadioButton" name="placement">
							<label>Placement</label>
							<occurrences minimum="1" maximum="1"/>
							<config>
								<option value="left">Left</option>
								<option value="middle">Middle</option>
								<option value="right">Right</option>
								<option value="top">Top</option>
								<option value="bottom">Bottom</option>
							</config>
						</input>
						<input type="ComboBox" name="textAreaHeight">
							<label>TextArea height</label>
							<occurrences minimum="0" maximum="1" />
							<config>
								<option value="textarea-height-default">Default height</option>
								<option value="textarea-height-2">2 × input field height</option>
								<option value="textarea-height-3">3 × input field height</option>
								<option value="textarea-height-4">4 × input field height</option>
								<option value="textarea-height-5">5 × input field height</option>
								<option value="textarea-height-6">6 × input field height</option>
								<option value="textarea-height-7">7 × input field height</option>
								<option value="textarea-height-8">8 × input field height</option>
								<option value="textarea-height-9">9 × input field height</option>
							</config>
						</input>

						<input type="CheckBox" name="required">
							<label>Required?</label>
							<occurrences minimum="0" maximum="1" />
						</input>
					</items>
				</item-set>
			</items>
		</field-set>
		<field-set name="Responses">
			<label>Responses</label>
			<items>
				<inline mixin="responses"/>
			</items>
		</field-set>
        <inline mixin="custom-css"/>
	</config>
</part>
