<?xml version="1.0" encoding="UTF-8"?>
<part>
	<display-name>Mail form</display-name>
	<config>
		<field-set name="Config">
			<label>Config</label>
			<items>
				<input type="TextLine" name="title">
					<label>Title</label>
					<occurrences minimum="0" maximum="1"/>
					<config/>
				</input>
				<input type="TextLine" name="formId">
					<label>Form ID</label>
					<occurrences minimum="1" maximum="1"/>
					<config>
						<regexp>^\w*$</regexp>
					</config>
				</input>
				<input type="CheckBox" name="showDoc">
					<label>Show help in edit mode?</label>
					<occurrences minimum="0" maximum="1" />
					<config/>
				</input>
				<input type="TextLine" name="receiver">
					<label>Send form data to (email)</label>
					<occurrences minimum="0" maximum="0"/>
					<config>
						<!-- <regexp>\w+([-+.']\w+)*@\w+([-.]\w+)*\.[A-Z0-9]{2,6}([-.][A-Z0-9]{2,6})*</regexp> -->
					</config>
				</input>
				<input type="CheckBox" name="copyToSender">
					<label>Send a note to sender</label>
					<occurrences minimum="0" maximum="1"/>
					<config/>
				</input>
				<field-set name="Appearence">
					<label>Appearence</label>
					<items>
						<input type="RadioButton" name="layout">
							<label>Layout</label>
							<occurrences minimum="0" maximum="0"/>
							<config>
								<option value="default">Default</option>
								<option value="wide">Wide</option>
							</config>
						</input>
					</items>
				</field-set>
				<field-set name="defaultInputs">
					<label>Default inputs</label>
					<items>
						<!-- <item-set name="sender">
							<label>Sender input</label>
							<occurrences minimum="1" maximum="1" />
							<config />
							<items>
								<input type="TextLine" name="label">
									<label>Label for sender e-mail</label>
									<occurrences minimum="0" maximum="1" />
								</input>
								<input type="TextLine" name="placeholder">
									<label>Placeholder for sender e-mail</label>
									<occurrences minimum="0" maximum="1" />
								</input>
							</items>
						</item-set> -->
						<item-set name="message">
							<label>Message area</label>
							<occurrences minimum="1" maximum="1" />
							<config />
							<items>
								<input type="TextLine" name="label">
									<label>Label for message area</label>
									<occurrences minimum="0" maximum="1" />
								</input>
								<input type="TextLine" name="placeholder">
									<label>Placeholder for message area</label>
									<occurrences minimum="0" maximum="1" />
								</input>
							</items>
						</item-set>
					</items>
				</field-set>						
			</items>
		</field-set>
		<field-set name="customFields">
			<label>Custom fields</label>
			<items>
				<item-set name="customField">
					<label>Input field</label>
					<occurrences minimum="0" maximum="0" />
					<config />
					<items>
						<input type="TextLine" name="label">
							<label>Label</label>
							<occurrences minimum="0" maximum="1" />
							<config/>
						</input>
						<input type="TextLine" name="placeholder">
							<label>Placeholder</label>
							<occurrences minimum="1" maximum="1" />
						</input>
						<input type="CheckBox" name="required">
							<label>Required field?</label>
							<occurrences minimum="0" maximum="1" />
						</input>
						<input type="ComboBox" name="type">
							<label>Type</label>
							<occurrences minimum="1" maximum="1" />
							<config>
								<option value="phone">Phone number</option>
								<option value="url">URL</option>
								<option value="text">Text</option>
								<option value="date">Date</option>
							</config>
						</input>
						<input type="TextLine" name="name">
							<label>Name</label>
							<occurrences minimum="1" maximum="1" />
							<config>
								<regexp>^\w*$</regexp>
							</config>
						</input>
					</items>
				</item-set>
			</items>
		</field-set>
		<field-set name="Responses">
			<label>Response</label>
			<items>
				<item-set name="templates">
					<label>Templates</label>
					<occurrences minimum="1" maximum="1" />
					<config />
					<items>
						<item-set name="receiver">
							<label>Receiver</label>
							<occurrences minimum="1" maximum="1" />
							<config />
							<items>
								<inline mixin="responses"/>
							</items>
						</item-set>
						<item-set name="sender">
							<label>Sender</label>
							<occurrences minimum="0" maximum="1" />
							<config />
							<items>
								<inline mixin="responses"/>
							</items>
						</item-set>
					</items>
				</item-set>
			</items>
		</field-set>
	</config>
</part>
