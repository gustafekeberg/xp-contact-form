<?xml version="1.0" encoding="UTF-8"?>
<site>
  <config>
  	<field-set name="config">
  		<label>Mail app config</label>
  		<items>
        <item-set name="statusMessages">
          <label>Status messages</label>
          <occurrences minimum="0" maximum="1" />
          <config />
          <items>
            <item-set name="sending">
              <label>Sending</label>
              <occurrences minimum="0" maximum="1" />
              <items>
                <inline mixin="statusmessages" />
              </items> 
            </item-set>
            <item-set name="success">
              <label>Success</label>
              <occurrences minimum="0" maximum="1" />
              <items>
                <inline mixin="statusmessages" />
              </items> 
            </item-set>
            <item-set name="danger">
              <label>Error</label>
              <occurrences minimum="0" maximum="1" />
              <items>
                <inline mixin="statusmessages" />
              </items> 
            </item-set>
            <item-set name="warning">
              <label>Warning</label>
              <occurrences minimum="0" maximum="1" />
              <items>
                <inline mixin="statusmessages" />
              </items> 
            </item-set>
          </items>
        </item-set>
      </items>
    </field-set>
  </config>
</site>
